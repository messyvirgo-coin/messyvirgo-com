<body class="blog-page bg-gray-900 text-gray-200 flex flex-col min-h-screen">
    <div id="scroll-progress"></div>
    <div class="aurora-bg"></div>

    <!-- Navigation -->
    {% include "partials/nav.njk" %}

    <main class="max-w-7xl mx-auto px-4 py-16 md:py-24 flex-1">
        
        <!-- Header Section -->
        <section class="mv-page-header mb-16">
            <h1 class="text-gradient mb-4">The MESSY Blog</h1>
            <p class="max-w-3xl mx-auto">Insights, updates, and deep dives into AI agents, autonomous fund management, and the future of DeFi.</p>
        </section>

        <!-- Blog Posts Grid -->
        <section class="blog-posts-grid">
            {% if collections.blog.length > 0 %}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {% for post in collections.blog %}
                        <article class="mv-card glassmorphism rounded-lg p-6 hover:shadow-lg hover:shadow-pink-500/20 fade-in group">
                            <div class="mb-4">
                                <time datetime="{{ post.date | htmlDateString }}" class="text-gray-400 text-sm">{{ post.date | readableDate }}</time>
                            </div>
                            <h2 class="text-2xl md:text-xl font-bold font-serif text-gradient mb-3 group-hover:text-pink-400 transition line-clamp-2">
                                {{ post.data.title }}
                            </h2>
                            <p class="text-gray-300 mb-4 line-clamp-3">
                                {{ post.data.description or post.content | excerpt }}
                            </p>
                            <a href="{{ post.url }}" class="read-more-btn">
                                Read More <span class="ml-2">â†’</span>
                            </a>
                        </article>
                    {% endfor %}
                </div>
            {% else %}
                <div class="mv-card glassmorphism rounded-lg p-12 text-center">
                    <h2 class="text-2xl font-serif text-gradient mb-4">No posts yet</h2>
                    <p class="text-gray-300">Check back soon for the latest insights on MESSY and AI agents!</p>
                </div>
            {% endif %}
        </section>
    </main>

    <!-- Footer -->
    {% set footerClass = 'mt-24' %}
    {% include "partials/footer.njk" %}

    <!-- External Scripts -->
    <script src="/js/main.js" defer></script>
    <script>
        // Make entire article card clickable
        document.addEventListener('DOMContentLoaded', function() {
            const articleCards = document.querySelectorAll('article.mv-card');
            
            articleCards.forEach(card => {
                // Find the read-more link within the card
                const readMoreLink = card.querySelector('.read-more-btn');
                
                if (readMoreLink) {
                    const href = readMoreLink.href;
                    
                    // Make the entire card clickable
                    card.style.cursor = 'pointer';
                    card.addEventListener('click', function(e) {
                        // Don't navigate if clicking the read-more button itself
                        if (e.target === readMoreLink || readMoreLink.contains(e.target)) {
                            return;
                        }
                        window.location.href = href;
                    });
                    
                    // Add keyboard support for accessibility
                    card.setAttribute('role', 'button');
                    card.setAttribute('tabindex', '0');
                    card.addEventListener('keydown', function(e) {
                        if (e.key === 'Enter' || e.key === ' ') {
                            e.preventDefault();
                            window.location.href = href;
                        }
                    });
                }
            });
        });
    </script>
    <style>
        /* Read More button style - matching founders page */
        .read-more-btn {
            display: inline-flex;
            align-items: center;
            position: relative;
            z-index: 1;
            margin-top: 0.5rem;
            padding: 0.5rem 1.25rem;
            background: rgba(255, 105, 180, 0.1);
            border: 1px solid rgba(255, 105, 180, 0.3);
            border-radius: 20px;
            color: #ff69b4;
            font-size: 0.8125rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        .read-more-btn::after {
            display: none !important;
        }
        .read-more-btn:hover {
            background: rgba(255, 105, 180, 0.2);
            border-color: #ff69b4;
            transform: translateY(-1px);
            text-decoration: none;
            color: #ff69b4;
        }
    </style>
</body>
</html>

