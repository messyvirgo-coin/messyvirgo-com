{
  "name": "messyvirgo-com",
  "version": "1.0.0",
  "description": "Messy Virgo website",
  "scripts": {
    "build:css": "tailwindcss -i ./css/input.css -o ./css/tailwind.css --minify",
    "watch:css": "tailwindcss -i ./css/input.css -o ./css/tailwind.css --watch",
    "build:eleventy": "eleventy",
    "serve": "eleventy --serve",
    "watch:eleventy": "eleventy --watch",
    "build": "npm run build:css && npm run build:eleventy",
    "dev": "eleventy --serve"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "tailwindcss": "^3.4.1"
  }
}
