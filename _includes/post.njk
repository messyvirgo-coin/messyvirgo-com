    <main class="max-w-3xl mx-auto px-4 py-16 md:py-24">
        <!-- Post Header -->
        <article class="fade-in">
            <header class="mb-12 text-center">
                <h1 class="text-gradient text-4xl md:text-5xl font-bold font-serif mb-4">{{ title }}</h1>
                <div class="flex flex-col md:flex-row justify-center items-center gap-4 text-gray-400 text-sm">
                    <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
                    {% if tags and tags.length > 0 %}
                        <div class="flex gap-2">
                            {% for tag in tags %}
                                {% if tag !== "blog" %}
                                    <span class="text-pink-400">#{{ tag }}</span>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </header>

            <!-- Post Content -->
            <div class="prose prose-invert max-w-none mb-16 text-gray-300 leading-relaxed">
                {{ content | safe }}
            </div>

            <!-- Post Footer -->
            <footer class="border-t border-white/10 pt-8">
                <div class="flex justify-between items-center">
                    <a href="/blog/" class="text-pink-400 hover:text-pink-300 transition">&larr; Back to Blog</a>
                </div>
            </footer>
        </article>
    </main>

    <!-- Footer -->
    <footer class="bg-black/20 border-t border-white/10 mt-24">
